@model ProjetSessionWebServ2.Models.Evenement

@{
    ViewBag.Title = @ProjetSessionWebServ2.GlobalRessources.EvenementRes.Edit;
}

<h2>@ProjetSessionWebServ2.GlobalRessources.EvenementRes.Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ProjetSessionWebServ2.GlobalRessources.EvenementRes.Evenemenent</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nom, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom)
                @Html.ValidationMessageFor(model => model.Nom)
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Salle.NoSalle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("lstSalle", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description,  new { @class = "form-control", cols = "100" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.DisplayName(@ProjetSessionWebServ2.GlobalRessources.ConferenceRes.Actif)
            <div class="col-md-10" style="display:none">
                @Html.EditorFor(model => model.Actif, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.DisplayFor(model => model.Actif)
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ProjetSessionWebServ2.GlobalRessources.EvenementRes.Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@ProjetSessionWebServ2.GlobalRessources.EvenementRes.Retouralaliste, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
