@model List<ProjetSessionWebServ2.Models.Tournoi>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(ProjetSessionWebServ2.GlobalRessources.TournoiRes.CreateNew, "Create")
</p>
@{
    using (Html.BeginForm("Index", "Tournois", FormMethod.Get))
    {
        <p>
            @ProjetSessionWebServ2.GlobalRessources.TournoiRes.ParTypeTournoi: @Html.DropDownList("searchTypeTournoi", (SelectList)ViewBag.searchTypeTournoi, "") <br>
            @ProjetSessionWebServ2.GlobalRessources.TournoiRes.ParNom: @Html.TextBox("searchNomTournoi", ViewBag.CurrentFilter as string) <br>
            <input type="submit" value="@ProjetSessionWebServ2.GlobalRessources.TournoiRes.Rechercher" class="btn btn-default" />
        </p>
    }

}

@{
    using (Html.BeginForm("Index", "Tournois", FormMethod.Get))
    {
        <p>

            @Html.Hidden("trieTournoi", ViewBag.CurrentFilter as string) <br>
            <input type="submit" value="@ProjetSessionWebServ2.GlobalRessources.TournoiRes.TrierParTypeDeTournoi" class="btn btn-default" />
        </p>

    }

}
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayName(ProjetSessionWebServ2.GlobalRessources.TournoiRes.NomTournoi)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayName(ProjetSessionWebServ2.GlobalRessources.TournoiRes.TypeTournoi)
        </th>
        <th>
           No Salle
        </th>
        <th>
            @Html.DisplayName(ProjetSessionWebServ2.GlobalRessources.TournoiRes.Actif)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeTournoi.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salle.NoSalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Actif)
        </td>
        <td>
            @Html.ActionLink(ProjetSessionWebServ2.GlobalRessources.TournoiRes.Edit, "Edit", new { id = item.Id }) |
            @Html.ActionLink(ProjetSessionWebServ2.GlobalRessources.TournoiRes.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(ProjetSessionWebServ2.GlobalRessources.TournoiRes.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@Html.Partial("~/Views/Congres/ListeEvenementTournoi.cshtml", (List<ProjetSessionWebServ2.Models.Tournoi>)Model)
