@model ProjetSessionWebServ2.Models.TypeSpectacle

@{
    ViewBag.Title = @ProjetSessionWebServ2.GlobalRessources.TypeRes.Edit;
}

<h2>@ProjetSessionWebServ2.GlobalRessources.TypeRes.Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ProjetSessionWebServ2.GlobalRessources.TypeRes.TypeSpectacle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

