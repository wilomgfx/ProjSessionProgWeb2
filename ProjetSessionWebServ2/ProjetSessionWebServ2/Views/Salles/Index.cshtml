@model IEnumerable<ProjetSessionWebServ2.Models.Salle>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.AddNewSalle, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NoSalle)
        </th>
        <th>
            @ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Taille 
        </th>
        <th>
            @ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Largeur
        </th>
        <th>
            @ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Longueur
        </th>
        <th>
            @ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Disponible 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NoSalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TailleSalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dimension.Largeur)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dimension.Longueur)
        </td>
        <td>
            @Html.ActionLink(@ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.VoirSection, "Index","Sections") |
            @Html.ActionLink(@ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(@ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(@ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
    foreach (var section in item.Sections)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => section.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => section.TailleSection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => section.Dimension.Largeur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => section.Dimension.Longueur)
            </td>
            <td>
                @Html.ActionLink(@ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(@ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Details, "Details", new { id = item.Id }) |
                @Html.ActionLink(@ProjetSessionWebServ2.GlobalRessources.SalleSectionRes.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }
}

</table>
